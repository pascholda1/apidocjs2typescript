{
	"compilerOptions": {
		"target": "es2022",
		"module": "NodeNext",
		"baseUrl": "./",
		"moduleResolution": "NodeNext",
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"strict": true,
		"sourceMap": true,
		"allowSyntheticDefaultImports": true,
		"outDir": "dist",
		"declaration": true
	},
	"include": [
		"src/**/*.ts"
	],
	"exclude": [
		".idea",
		"node_modules"
	]
}
